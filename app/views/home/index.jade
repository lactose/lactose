extends ../layout

block content
    div(class='container') 
      section#posts
        each post in posts
          article(class='lac-post-summary')
            a(href='/post/view/#{post._id}')
              h2= post.title
            h3= "Posted on " + util.getNiceDate(post.date)
            p(class='lac-post-body--full')!= util.getFirstN(50, md(post.body))
            a(class='lac-post-more', href='/post/view/#{post._id}') read more
